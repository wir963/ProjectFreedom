<%= " " + @professor.last_name%>
</h1>
</td>


<td id="overall_rating">
<%= image_tag('block_red_r.png') %>
</td>

</tr></table> <!--header_table-->



<table id="courses_taught">
	<tr>
		<th>Courses Taught</th>
	</tr>
<% @professor.courses.each do |course|%>
	<tr>
		<td><%= course.name %></td>
	</tr>
<% end %>
</table><!--courses_taught-->


