<style type="text/css">
#header_table {margin-left: auto; margin-right: auto; height: 300px; width: 900;}
#professor_name {vertical-align: bottom;}
#post_it {padding-bottom: 150px; position:absolute; left: 550px; z-index:200;}
#post_it h1 {position:relative; bottom: 239px; left: 100px;}
#headshot {position:absolute; left: 350px; top: 250px; z-index:100;}
#overall_rating {position:absolute; left: 824px; top: 175px; z-index:100;}
