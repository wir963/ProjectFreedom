<div class="subject new">
	<h2>Create a free account today!</h2>

	<%= form_for(:admin_user, :url => {:action => 'create'}) do |c| %>
	
	<table summary="Subject form fields">
		<tr>
			<th>User Name</th>
			<td><%= c.text_field(:user_name) %></td>
		</tr>
		<tr>
			<th>Password</th>
			<td><%= c.password_field(:password) %></td>
		</tr>
	</table>
	<%= submit_tag("Create Account") %>
	
	<% end %>
	
</div>